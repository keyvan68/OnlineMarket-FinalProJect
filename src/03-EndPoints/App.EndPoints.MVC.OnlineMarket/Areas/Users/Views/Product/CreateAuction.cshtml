@using App.Domain.Core.DtoModels.AuctionDtoModels;
@model AuctionDto

@{
    ViewData["Title"] = "ساخت مزایده";
    Layout = "_UserLayout";
}

<h1>ساخت مزایده</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAuction" asp-controller="Product">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="StartTime" class="control-label"></label>
            <input asp-for="StartTime" class="form-control" />
            <span asp-validation-for="StartTime"></span>

            <label asp-for="EndTime" class="control-label"></label>
            <input asp-for="EndTime" class="form-control" />
            <span asp-validation-for="EndTime"></span>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

