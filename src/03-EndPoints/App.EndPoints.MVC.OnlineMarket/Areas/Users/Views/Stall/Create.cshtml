@using App.EndPoints.MVC.OnlineMarket.Areas.Users.Models.ViewModels;
@model CreateStallViewModel


@{
    ViewData["Title"] = "ساهت فروشگاه ";
    Layout = "_UserLayout";
}

<h3> ساخت فروشگاه</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>

            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>

            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address"></span>

            
           
            <div class="form-group">
                <input type="submit" value="اضافه کردن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

