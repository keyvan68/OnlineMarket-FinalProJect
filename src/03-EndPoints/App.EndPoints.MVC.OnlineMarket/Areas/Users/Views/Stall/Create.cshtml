@using App.EndPoints.MVC.OnlineMarket.Areas.Users.Models.ViewModels;
@model CreateStallViewModel


@{
    ViewData["Title"] = "ساهت فروشگاه ";
    Layout = "_UserLayout";
}

<h3> ساخت فروشگاه</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Stall" asp-action="Create" method="post">
            <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            @*<span asp-validation-for="Name"></span>*@
            </div>
            <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            @*<span asp-validation-for="Description"></span>*@
            </div>
            <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            @*<span asp-validation-for="Address"></span>*@
            </div>
            
           
            <div class="form-group">
                <input type="submit" value="اضافه کردن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



