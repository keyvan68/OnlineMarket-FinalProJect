@using App.Domain.Core.DtoModels;

@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "محصولات";
    Layout = "_AdminLayout";
}
<h1>محصولات</h1>
<p>
    <a class="btn btn-primary text-white" asp-controller="Product" asp-action="Add">ساخت محصول جدید</a>
</p>


<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-info text-white">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Stall.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAccepted)
            </th>

            <th> عملیات</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stall.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAccepted)
                </td>
                <td>

                    <a class="btn btn-info text-white" href="/Admin/Dashboard/ConfirmByAdmin/@item.Id">تایید محصول</a>

                    
                </td>
            </tr>
        }
    </tbody>

</table>