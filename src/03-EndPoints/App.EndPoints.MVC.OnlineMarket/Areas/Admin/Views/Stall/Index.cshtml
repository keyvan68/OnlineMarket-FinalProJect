@model List<StallListViewModel>

@{
    ViewData["Title"] = "لیست مغزه ها";
    Layout = "_AdminLayout";
}

<h1>لیست مغازه‌ها</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-info text-white">
            <th>نام مغازه</th>
            <th>فروشنده</th>
            <th>نام محصولات</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellerName)
                </td>
                <td>
                    @foreach (var product in item.Products)
                    {
                        <span>@product.Title</span>

                        <br />
                    }
                </td>
                
                
               
                <td>
                    <a class="btn btn-info text-white" asp-controller="Stall" asp-action="Update" asp-route-id="@item.Id">ویرایش</a>
                    <a class="btn btn-danger text-white" asp-controller="Stall" asp-action="Delete" asp-route-id="@item.Id">حذف</a>



                </td>
            </tr>
        }
    </tbody>
</table>




