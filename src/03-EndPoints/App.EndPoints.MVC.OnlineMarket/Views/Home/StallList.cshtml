@using App.EndPoints.MVC.OnlineMarket.Areas.Admin.Models.ViewModels;
@model List<StallListViewModel>
@{
    ViewData["Title"] = "همه غرفه ها";
}
<!-- product box -->




<div class="product-box-two">
    <div class="container">
        <div class="row d-flex justify-content-around">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;margin-bottom: 25px;">
                    <img src="~/Images/Store.jpg" class="img-fluid">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@item.SellerName</li>

                    </ul>
                    <div class="card-body">
                        <div class="product-box-item-hover">

                            <div class="product-box-item-hover-cart">
                                <button class="product-box-item-hover-cart-btn">
                                    <i class="bi bi-info"></i> جزئیات
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

</div>
