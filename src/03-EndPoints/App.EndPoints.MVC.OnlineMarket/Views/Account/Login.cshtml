
@model App.EndPoints.MVC.OnlineMarket.Models.ViewModels.LoginViewModel
@*@{
    ViewData["Title"] = "login";
}

<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login" method="post">
            <h2>login to account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username"  />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password"  />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <button  type="submit" class="w-100 btn btn-lg btn-primary">ورود</button>
        </form>
    </div>

</div>