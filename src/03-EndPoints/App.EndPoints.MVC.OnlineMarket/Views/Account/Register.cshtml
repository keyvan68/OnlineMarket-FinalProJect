
@model App.EndPoints.MVC.OnlineMarket.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}



<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Register" method="post">
            <h2>ثبت نام</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin-bottom:7px;">
                <input asp-for="Email" class="form-control" autocomplete="username"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:7px;">
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:7px;">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"  />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:7px;">
            <select class="form-control" name="Role">
                <option value="buyer">مشتری</option>
                <option value="seller">فروشنده</option>
            </select>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>
